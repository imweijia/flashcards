<div class="container">
  <div class="header">
    <a href="/"><h1 class="headerfont">Wam Bam Cards!</h1></a>
        <h2 class="h2">The addictive flash cards game you have to play!</h2>
  </div>

  <div class="content">
    <table>
      <tr>
        <td>Round</td>
        <td>Deck</td>
        <td>Score</td>
      </tr>
        <% @user.rounds.each do |r| %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.deck.name %></td>
            <td><%= r.score %></td>
          </tr>
        <% end %>

    </table>
  </div>

  <div class="deck_container">
    <% @decks.each do |d| %>
      <a href="/new/round/<%= d.id%>">
        <div class="deck1">
          <%= d.name %>
        </div>
      </a>
    <% end %>
  </div>


</div>